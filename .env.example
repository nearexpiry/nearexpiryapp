# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# JWT Secret (REQUIRED - Change this!)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Cloudinary Configuration (REQUIRED for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (REQUIRED for password reset and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Port Configuration (OPTIONAL - defaults are chosen to avoid conflicts)
# Uncomment and modify if these ports are also in use on your system
# FRONTEND_PORT=8080
# BACKEND_PORT=8000
# POSTGRES_PORT=54320  # Only needed if you uncomment PostgreSQL port exposure in docker-compose.yml
