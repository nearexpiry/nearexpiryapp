# Sample .env file - Copy this to .env and fill in your actual values
# This file shows example values to help you get started

# JWT Secret - Generate a random string for production
# Example: use an online generator or run: openssl rand -base64 32
JWT_SECRET=my_super_secret_jwt_key_change_this_in_production_12345

# Cloudinary Configuration
# Sign up at https://cloudinary.com for free tier
CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=abcdefghijklmnopqrstuvwxyz123456

# Email Configuration (Gmail example)
# For Gmail, create an App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=yourapp@gmail.com
EMAIL_PASS=your_16_character_app_password_here

# Port Configuration (OPTIONAL)
# Default ports are: Frontend=8080, Backend=8000
# Uncomment to override if these ports are already in use
# FRONTEND_PORT=8081
# BACKEND_PORT=8001
